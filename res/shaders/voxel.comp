#version 450 core

layout (local_size_x = 16, local_size_y = 16, local_size_z = 1) in;

layout (set = 0, binding = 0) uniform writeonly image2D outputImage;

void main() {
    ivec2 uv = ivec2(gl_GlobalInvocationID.x, gl_GlobalInvocationID.y);
    ivec2 size = imageSize(outputImage);
    
    imageStore(outputImage, uv, vec4(float(uv.x) / size.x, float(uv.y) / size.y, 0.4, 1.0));
}